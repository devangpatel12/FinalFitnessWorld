@model FinalFitnessWorld.Models.Reservation

@{
    ViewBag.Title = "Cancel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cancel</h2>

<h3>Are you sure you want to cancel this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Branch1.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Branch1.Name)
        </dd>

        @if (User.IsInRole("trainer") | User.IsInRole("admin"))
        {
            <dt>
                @Html.DisplayNameFor(model => model.Customer1.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Customer1.Name)
            </dd>
        }
        @if (User.IsInRole("customer") | User.IsInRole("admin"))
        {
            <dt>
                @Html.DisplayNameFor(model => model.Trainer1.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Trainer1.Name)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReservationStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReservationStatus)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancel" class="btn btn-default" /> |
            @Html.ActionLink("Back to Reservations List", "Index")
        </div>
    }
</div>
